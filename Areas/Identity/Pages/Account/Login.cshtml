@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    * {
        margin: 0;
        padding: 0;
        font-family: 'Poppins',sans-serif;
        box-sizing: border-box;
    }

    .newcontainer {
        width: 100%;
        height: 100vh;
        background-position: center;
        background-size: cover;
        position: relative;
        background: rgb(48,23,64);
        background: radial-gradient(circle, rgba(48,23,64,1) 23%, rgba(0,0,0,1) 53%);
    }

    .form-box {
        width: 90%;
        max-width: 450px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        padding: 50px 60px 70px;
        text-align: center;
        background: #000;
    }

        .form-box h1 {
            font: 30px;
            margin-bottom: 60px;
            color: pink;
            position: relative;
        }

            .form-box h1::after {
                content: '';
                width: 30px;
                height: 4px;
                border-radius: 3px;
                background: #3c00a0;
                position: absolute;
                bottom: -12px;
                left: 50%;
                transform: translateX(-50%);
            }

    .input-field {
        background: #eaeaea;
        color: #fff;
        margin: 15px 0;
        border-radius: 3px;
        display: flex;
        align-items: center;
        max-height: 65px;
        transition: max-height 0.5s;
        overflow: hidden;
    }

    #myInput {
        width: 100%;
        background: transparent;
        border: 0;
        outline: 0;
        padding: 18px 15px;
    }

    .input-field i {
        margin-left: 15px;
        color: #999;
        background: #eaeaea;
    }

    #forgot {
        text-align: left;
        font-size: 15px;
    }

        #forgot a {
            text-decoration: none;
            color: #2D033B;
        }

        #forgot:hover {
            color: blue;
        }

    .btn-field {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }

        .btn-field button {
            flex-basis: 100%;
            background: #2D033B;
            color: #fff;
            height: 40px;
            border-radius: 20px;
            border: 0;
            outline: 0;
            cursor: pointer;
            transition: background 1s;
        }

    .new_input-group {
        height: 280px;
    }

    .btn-field button.disable {
        background: #eaeaea;
        color: #555;
    }
</style>

<div class="newcontainer">
    <script src="https://kit.fontawesome.com/11e757be1e.js" crossorigin="anonymous"></script>
    <div class="form-box">

        <h1 id="title">Log in</h1>

        <form method="post">
            <div class="new_input-group ">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-field">
                    <i class="fa-solid fa-envelope"></i>
                    <input asp-for="Input.Email" class="text-dark" autocomplete="username" aria-required="true" id="myInput" placeholder="Email" />
                
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="fa-solid fa-lock"></i>
                    <input asp-for="Input.Password" class="text-dark" autocomplete="current-password" aria-required="true" id="myInput" placeholder="Password" />
                   
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <br />
                <div class="btn-field">
                    <button id="login-submit" type="submit" id="registerBtn" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </div>
            <div>
                <h5>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </h5>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
