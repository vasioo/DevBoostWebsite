@model TaskFormModel

<style>

    .row{
    font-size:27px;
    }


    .form-group{
        padding-top:20px;
    }

    h1{
        padding-bottom:25px;
        text-align:center;
    }

    .text-center input{
        background: #2D033B;
        border-color: blueviolet;
        height:50px;
        width:150px;
    } 
    
    .text-center input:hover{
            background: #b16cc8;
                border-color: blueviolet;
    }
</style>


<h1>Add a task</h1>
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="CategoryId">Choose a category:</label>
                <select asp-for="CategoryId" name="category" id="category">
                      <option value="1">HTML & CSS</option>
                      <option value="2">Javascript Beginning</option>
                      <option value="3">High Level C#</option>
                      <option value="4">ASP.NET</option>
                      <option value="5">Data structures and Algorithms</option>
                      <option value="6">Advanced Javascript</option>
                      <option value="7">Bootstrap</option>
                      <option value="8">ReactJS</option>
                    </select>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="6" class="form-control" placeholder="What is the task..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input"></label>
                <input asp-for="Input" class="form-control" placeholder="What should the person enter: ">
                <span asp-validation-for="Input" class="small text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="Output"></label>
                <input asp-for="Output" class="form-control" placeholder="What should the program return: ">
                <span asp-validation-for="Output" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
