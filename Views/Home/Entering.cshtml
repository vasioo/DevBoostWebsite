
@    using DevBoost.Models.EnteringModels;
@model RegisterModel

@{
    ViewData["Title"] = "Entering";
}
<style>

    * {
        color: black;
        margin: 0;
        padding: 0;
        font-family: 'Poppins',sans-serif;
        box-sizing: border-box;
    }

    .newcontainer {
        width: 100%;
        height: 100vh;
        background-position: center;
        background-size: cover;
        position: relative;
        background: rgb(48,23,64);
        background: radial-gradient(circle, rgba(48,23,64,1) 23%, rgba(0,0,0,1) 53%);
    }

    .form-box {
        width: 90%;
        max-width: 450px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        padding: 50px 60px 70px;
        text-align: center;
        background: #000;
    }

        .form-box h1 {
            font: 30px;
            margin-bottom: 60px;
            color: #9f98c8;
            position: relative;
        }

            .form-box h1::after {
                content: '';
                width: 30px;
                height: 4px;
                border-radius: 3px;
                background: #9f98c8;
                position: absolute;
                bottom: -12px;
                left: 50%;
                transform: translateX(-50%);
            }

    .input-field {
        background: #eaeaea;
        color: #fff;
        margin: 15px 0;
        border-radius: 3px;
        display: flex;
        align-items: center;
        max-height: 65px;
        transition: max-height 0.5s;
        overflow: hidden;
    }

    .myInput {
        width: 100%;
        background: transparent;
        border: 0;
        outline: 0;
        padding: 18px 15px;
    }

    .input-field i {
        margin-left: 15px;
        color: #999;
        background: #eaeaea;
    }

    #forgot {
        text-align: left;
        font-size: 15px;
        color: #9f98c8;
    }

        #forgot a {
            text-decoration: none;
            color: #9f98c8;
        }

        #forgot:hover {
            color: lightskyblue;
        }

    .btn-field {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }

    #submit {
        padding-top: 23px;
        justify-content: center;
    }

        #submit button {
            background: #27ae60;
        }

            #submit button:hover {
                background: #008631;
            }

    .btn-field button {
        flex-basis: 48%;
        background: #2D033B;
        color: #fff;
        height: 40px;
        border-radius: 20px;
        border: 0;
        outline: 0;
        cursor: pointer;
        transition: background 1s;
    }

    .new_input-group {
        height: 280px;

    }


    .btn-field button.disable {
        background: #eaeaea;
        color: #555;
    }

</style>

<div class="newcontainer">
    <script src="https://kit.fontawesome.com/11e757be1e.js" crossorigin="anonymous"></script>
    <div class="form-box">
        <h1 id="title">Register</h1>
            <form class="myInput" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="new_input-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-field" id="nameField">
                    <i class="fa-solid fa-user"></i>
                    <input asp-for="Input.Name" class="myInput" placeholder="Full Name" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="input-field">
                    <i class="fa-solid fa-envelope"></i>
                    <input asp-for="Input.Email" class="myInput" autocomplete="username" aria-required="true" placeholder="Email" />
                    
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div>

                <div class="input-field">
                    <i class="fa-solid fa-lock"></i>
                    <input asp-for="Input.Password" class="myInput" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                   
                </div>

                <a id="forgot" onclick="location.href='@Url.Action("Help","Home")'">Forgot password</a>

            </div>
            <div class="btn-field">
                <button type="button" id="registerBtn">Register</button>
                <button type="button" class="disable" id="loginBtn">Log in</button>

            </div>
            <div class="btn-field" id="submit">
                <hr />
                <button type="submit" id="submitBtn">Submit</button>
            </div>
        </form>

    </div>

</div>

<script>

    let registerBtn = document.getElementById("registerBtn");
    let loginBtn = document.getElementById("loginBtn");
    let nameField = document.getElementById("nameField");
    let title = document.getElementById("title");
    let submit = document.getElementById("submitBtn");

    loginBtn.onclick = function () {
        nameField.style.maxHeight = "0";
        title.innerHTML = "Log in";
        registerBtn.classList.add("disable");
        loginBtn.classList.remove("disable");
    }

    registerBtn.onclick = function () {
        nameField.style.maxHeight = "60px";
        title.innerHTML = "Register";
        registerBtn.classList.remove("disable");
        loginBtn.classList.add("disable");
    }

    submit.onclick = function(){
        window.location.href = "https://localhost:7103/Index"
    }
</script>
