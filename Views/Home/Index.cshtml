                }

        #slider #prev, #slider #next {
            width: 50px;
            line-height: 50px;
            border-radius: 50%;
            font-size: 2rem;
            text-shadow: 0 0 20px rgba(0, 0, 0, 0.6);
            text-align: center;
            color: white;
            text-decoration: none;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            transition: all 150ms ease;
        }

            #slider #prev:hover, #slider #next:hover {
                background-color: rgba(0, 0, 0, 0.5);
                text-shadow: 0;
            }

        #slider #prev {
            left: 10px;
        }

        #slider #next {
            right: 10px;
        }
